<!doctype html>
<html>
<head>
    <title> My Personal Wishlist </title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
    <h1>  My Personal Wishlist  </h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->

        <div class="col-sm-6">
        <img src="img/wishlist.png">
        </div>

        <div class="col-sm-6">
          <h3> Create your Wishlist Down Below</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].item %></span>
              <span><%= messages[i].store %></span>
              <span><%= messages[i].price %></span>
              <button class="delete" value="<%= messages[i]._id%>">X</button>
            </li>
          <% } %>
          </ul>

          <h2> Add Items to Wishlist</h2>
        <!-- <% if (user.local.email) { %> -->
          <form action="/messages" method="POST">
            <input type="text" placeholder="title" name="item">
            <input type="text" placeholder="store" name="store">
            <input type="number" placeholder="$" name="price">
            <button type="submit"> submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>
<script src="server.js"></script>

</body>
</html>
